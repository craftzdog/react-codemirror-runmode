{
  "name": "react-codemirror-runmode",
  "version": "2.0.1",
  "description": "Syntax highlighting for react, utilizing CodeMirror's parser",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "test": "vitest",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepublishOnly": "npm-run-all lint format:check build && npm run test run"
  },
  "keywords": [
    "react",
    "codemirror",
    "syntax",
    "highlight"
  ],
  "author": "Takuya Matsuyama <hi@craftz.dog>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/craftzdog/react-codemirror-runmode.git"
  },
  "dependencies": {
    "@codemirror/language": "^6.10.1",
    "@codemirror/language-data": "^6.5.1",
    "@lezer/common": "^1.2.1",
    "@lezer/highlight": "^1.2.0"
  },
  "peerDependencies": {
    "react": ">= 18"
  },
  "devDependencies": {
    "@codemirror/theme-one-dark": "^6.1.2",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.12",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-react": "^7.37.4",
    "jsdom": "^26.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "react": "^19.0.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.27.0",
    "vite": "^6.2.2",
    "vitest": "^3.0.9"
  }
}
