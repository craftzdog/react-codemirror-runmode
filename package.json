{
  "name": "react-codemirror-runmode",
  "version": "2.1.0",
  "description": "Syntax highlighting for react, utilizing CodeMirror's parser",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "test": "vitest",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepublishOnly": "npm-run-all lint format:check build && npm run test run"
  },
  "keywords": [
    "react",
    "codemirror",
    "syntax",
    "highlight"
  ],
  "author": "Takuya Matsuyama <hi@craftz.dog>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/craftzdog/react-codemirror-runmode.git"
  },
  "dependencies": {
    "@codemirror/language": "^6.11.3",
    "@codemirror/language-data": "^6.5.2",
    "@lezer/common": "^1.4.0",
    "@lezer/highlight": "^1.2.3"
  },
  "peerDependencies": {
    "react": ">= 18"
  },
  "devDependencies": {
    "@codemirror/theme-one-dark": "^6.1.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^25.0.1",
    "@types/react": "^19.2.7",
    "@vitejs/plugin-react": "^5.1.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "jsdom": "^27.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.7.4",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0",
    "vite": "^7.2.7",
    "vitest": "^4.0.15"
  }
}
